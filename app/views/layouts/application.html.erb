<!DOCTYPE html>
<html> 
<head>
    <title>Amethyst</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
  </head>

<body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Ametyst</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active">
          <li><%= link_to "New Post", new_post_path %></li>
          <%# if person is logged in %>
          <% if current_user != nil then %>
          <li>
          <%# we make them logout because people should spend less time on internet. %>
          <%# with method delete we are del current session %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete  %>
          </li>
          <% else %>
             <li>
              <%= link_to "Login", new_user_session_path %>
            </li>
            <li>
              <%= link_to "Register", new_user_registration_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <% if flash[:error] then %>
       
       <div class="container col-sm-6" style="max-width:50%;margin-top:15px;">
        <div class="alert alert-danger">
          <% @errors = flash[:error] %>
          <% for @error in @errors do %>
            <%= @error %>. </br>
          <% end %>
        </div>
       </div>
      <% end %> 
  <div class="clear"></div>   
  <% if flash[:success] %> 
       
       <div class="container col-sm-6" style="max-width:50%;margin-top:15px;">
	<div class="alert alert-success"><%= flash[:success] %></div>
       </div>
       <div class="clear"></div>
      <% end %>
  <div class="clear"></div>   
<div class="container container_yield" style="width:90%;margin-left:15px;float:left;">
  <%= yield %>
</div>

</body>
</html>
