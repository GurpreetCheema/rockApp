<h1>Posts</h1>
<% if @posts.size > 0 then %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Image</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
     <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.id.to_s, post_path(post), :class => 'btn btn-small btn-default'%></td>
        <td>
          <%= image_tag(post.image.url(:medium))%>
        </td>
        <td><%= post.description.to_s%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
   No posts found.
<% end %>
